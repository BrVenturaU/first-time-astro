---
import BaseTemplate from "../../templates/BaseTemplate.astro";
import BlogPost from "../../components/BlogPost.astro";

export async function getStaticPaths() {
  const allPosts = await Astro.glob("../posts/*.md");

  const tags = [...new Set(allPosts.flatMap((post) => post.frontmatter.tags))];
  return tags.map((tag) => ({
    params: { tag },
    props: {
      posts: allPosts.filter((post) => post.frontmatter.tags.includes(tag)),
    },
  }));
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseTemplate pageTitle={tag}>
  <p>Entradas etiquetadas con {tag}:</p>
  <ul>
    {
      posts.map((post) => (
        <BlogPost url={post.url} title={post.frontmatter.title} />
      ))
    }
  </ul>
</BaseTemplate>
