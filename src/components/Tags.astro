---
const { tags } = Astro.props;
---

<div class="flex flex-wrap">
  {
    tags.map((tag) => (
      <p class="m-1 border border-dotted border-gray-400 rounded-lg py-2 px-4 text-lg bg-slate-200">
        <a class="text-blue-600" href={`/tags/${tag}`}>
          {tag}
        </a>
      </p>
    ))
  }
</div>
